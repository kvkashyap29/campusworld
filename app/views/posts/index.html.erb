<h1>Posts</h1>

<%= form_tag posts_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="facets">
  <h3>Published</h3>
  <ul>
    <% for row in @search.facet(:publish_month).rows %>
      <li>
        <% if params[:month].blank? %>
          <%= link_to row.value, :month => row.value %> (<%= row.count %>)
        <% else %>
          <strong><%= row.value %></strong> (<%= link_to "remove", :month => nil %>)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<div id="posts">
<% for post in @posts %>
  <h2>
    <%= link_to post.name, post %>
  </h2>
  <div class="published_at">on <%= post.published_at.strftime('%b %d, %Y') %></div>
  <div class="content"><%= post.content %></div>
  
<% end %>
</div>

<p><%= link_to "New post", new_post_path %></p>
