<%= form_for @post do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :published_at %><br />
    <%= f.date_select :published_at %>
  </p>
  <p><%= f.submit %></p>
<% end %>
