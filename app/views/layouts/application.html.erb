<!DOCTYPE html>
<html>
  <head>
    <title>CampusWorld</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  </head>
  <body>
  	 <%= javascript_include_tag 'application' %>
<%= stylesheet_link_tag 'application', media: 'all' %>
  	<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">CampusWorld</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <%- if user_signed_in? %>
        <li class='nav-item'><%= link_to 'Home', authenticated_root_path %></li>
        <li class='nav-item'><a  href="students">Student</a></li>
         <li class='nav-item'><a  href="attendences">Attendances</a></li>
          <li class='nav-item'><a  href="textbooks">Text Books</a></li>
        <li class='nav-item'><%= link_to 'Sign Out', destroy_user_session_path, method: 'delete'%></li>
        <li class='nav-item nohref'>
          <a nohref>
          Hey, <%= current_user.email.split('@')[0] %>
          </a>
        </li>
        <% else %>
        <li class='nav-item'><%= link_to 'Log in', new_user_session_path %></li>
        <li class='nav-item'><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

    <%= yield %>
  </body>
</html>
