<p id="notice"><%= notice %></p>

<h1>Attendences</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Date</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendences.each do |attendence| %>
      <tr>
        <td><%= attendence.status %></td>
        <td><%= attendence.date %></td>
        <td><%= attendence.student_id %></td>
        <td><%= link_to 'Show', attendence %></td>
        <td><%= link_to 'Edit', edit_attendence_path(attendence) %></td>
        <td><%= link_to 'Destroy', attendence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

